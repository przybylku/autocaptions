    "font": {
        "name": "Arial",
        "size": 60,
        "color": "&H00FFFFFF",
        "outline_color": "&H00000000",
        "outline_width": 2.0,
        "shadow_depth": 1.0
    },
    "highlight": {
        "enabled": true,
        "color": "&H0000FF00", 
        "text_color": "&H00FFFFFF",
